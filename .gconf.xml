<gconfentryfile>
<!-- fixing all the really egregious we need to BS from gnome -->
<!-- gconftool -\-load ~/.gconf.xml # to apply -->
  <entrylist base="/apps/gnome-terminal">
    <entry>
      <key>global/default_profile</key>
      <schema_key>/schemas/apps/gnome-terminal/global/default_profile</schema_key>
      <value>
        <string>Default</string>
      </value>
    </entry>
    <entry>
      <key>global/profile_list</key>
      <schema_key>/schemas/apps/gnome-terminal/global/profile_list</schema_key>
      <value>
        <list type="string">
            <value>
              <string>Default</string>
            </value>
        </list>
      </value>
    </entry>
    <!-- give me back my meta key you insufferable buffoon -->
    <entry>
      <key>global/use_menu_accelerators</key>
      <schema_key>/schemas/apps/gnome-terminal/global/use_menu_accelerators</schema_key>
      <value>
        <bool>false</bool>
      </value>
    </entry>
    <!-- pixels don't grow on trees, fool -->
    <entry>
      <key>profiles/Default/default_show_menubar</key>
      <schema_key>/schemas/apps/gnome-terminal/profiles/Default/default_show_menubar</schema_key>
      <value>
        <bool>false</bool>
      </value>
    </entry>
    <entry>
      <key>profiles/Default/scrollback_unlimited</key>
      <schema_key>/schemas/apps/gnome-terminal/profiles/Default/scrollback_unlimited</schema_key>
      <value>
        <bool>true</bool>
      </value>
    </entry>
    <entry>
      <key>profiles/Default/scrollbar_position</key>
      <schema_key>/schemas/apps/gnome-terminal/profiles/Default/scrollbar_position</schema_key>
      <value>
        <string>hidden</string>
      </value>
    </entry>
  </entrylist>
  <entrylist base="/apps/nautilus">  
    <entry>
      <!-- what is the point of ~/Desktop? Please can someone explain? -->
      <key>preferences/desktop_is_home_dir</key>
      <schema_key>/schemas/apps/nautilus/preferences/desktop_is_home_dir</schema_key>
      <value>
        <bool>true</bool>
      </value>
    </entry>
    <entry>
      <!-- gotta admit; this is a pretty great typeface. if only I
           didn't have to set it in XML -->
      <key>preferences/desktop_font</key>
      <schema_key>/schemas/apps/nautilus/preferences/desktop_font</schema_key>
      <value>
        <string>Ubuntu Light 10</string>
      </value>
    </entry>
    <entry>
      <!-- superfluous icons? I guess some people like 'em? -->
      <key>desktop/computer_icon_visible</key>
      <schema_key>/schemas/apps/nautilus/desktop/computer_icon_visible</schema_key>
      <value>
        <bool>false</bool>
      </value>
    </entry>
    <entry>
      <key>desktop/trash_icon_visible</key>
      <schema_key>/schemas/apps/nautilus/desktop/trash_icon_visible</schema_key>
      <value>
        <bool>false</bool>
      </value>
    </entry>
    <entry>
      <key>desktop/home_icon_visible</key>
      <schema_key>/schemas/apps/nautilus/desktop/home_icon_visible</schema_key>
      <value>
        <bool>false</bool>
      </value>
    </entry>
  </entrylist>
  <entrylist base="/desktop/gnome/font_rendering">
    <entry>
      <key>antialiasing</key>
      <schema_key>/schemas/desktop/gnome/font_rendering/antialiasing</schema_key>
      <value>
        <string>rgba</string>
      </value>
    </entry>
    <entry>
      <key>hinting</key>
      <schema_key>/schemas/desktop/gnome/font_rendering/hinting</schema_key>
      <value>
        <string>slight</string>
      </value>
    </entry>
  </entrylist>
  <entrylist base="/desktop/gnome/interface">
    <entry>
      <key>font_name</key>
      <schema_key>/schemas/desktop/gnome/interface/font_name</schema_key>
      <value>
        <string>Ubuntu Light 10</string>
      </value>
    </entry>
    <entry>
      <key>monospace_font_name</key>
      <schema_key>/schemas/desktop/gnome/interface/monospace_font_name</schema_key>
      <value>
        <string>Inconsolata Medium 12</string>
      </value>
    </entry>
  </entrylist>
</gconfentryfile>
